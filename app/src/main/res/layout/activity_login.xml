<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loginComment"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/login_comment" />

        <ImageView
            android:id="@+id/loginLogo"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/login_logo" />

        <ImageView
            android:id="@+id/loginFoods"
            android:layout_width="319dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            app:srcCompat="@drawable/login_foods" />

        <ImageButton
            android:id="@+id/kakaoLoginBtn"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/kakao_login_medium_wide" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심줄 놓지마가 처음이신가요?" />

            <TextView
                android:id="@+id/signupBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="회원가입" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>